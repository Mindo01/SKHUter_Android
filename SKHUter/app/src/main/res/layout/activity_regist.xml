<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.classs.skhuter.view.RegistActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="185dp"
        android:layout_height="75dp"
        android:layout_weight="0.20"
        android:background="@drawable/logo"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/registID"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/registID"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText7"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:hint="학번을 입력하세요"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText6"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="이름을 입력하세요"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText4"
        android:layout_below="@+id/editText4"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="휴대폰 번호를 입력하세요"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText7"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="비밀번호를 다시 입력하세요"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText6"
        android:layout_alignStart="@+id/registID"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="비밀번호를 입력하세요"
        android:inputType="textPassword" />

    <Spinner
        android:id="@+id/spinner_isLeave"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner_grade"
        android:layout_alignStart="@+id/spinner_grade"
        android:layout_below="@+id/spinner_grade"
        android:layout_marginTop="20dp" />

    <Spinner
        android:id="@+id/spinner_grade"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText5"
        android:layout_alignStart="@+id/editText5"
        android:layout_below="@+id/editText5"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">


    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:id="@+id/btnRegist"
        android:background="#ff7058"
        android:textColor="#ffffff"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="이름"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/editText4"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginStart="7dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="학년"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/spinner_grade"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="학적 상태"
        android:textSize="20sp"
        android:layout_alignTop="@+id/spinner_isLeave"
        android:layout_toStartOf="@+id/registID" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="비밀번호"
        android:textSize="20sp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/linearLayout"
        android:layout_toStartOf="@+id/registID" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:text="아이디"
        android:textSize="20sp"
        android:layout_alignBaseline="@+id/registID"
        android:layout_alignBottom="@+id/registID"
        android:layout_toStartOf="@+id/registID" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText5"
        android:layout_alignBottom="@+id/editText5"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginRight="30dp"
        android:text="휴대폰"
        android:textSize="20sp" />

</RelativeLayout>
